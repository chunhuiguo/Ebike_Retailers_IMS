<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
    "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="stock" extends="home" namespace="/stock">

		<action name="*inventory" class="{1}inventoryAct" method="detail">
			<result>/WEB-INF/store/inventory.jsp</result>								
		</action>
		<action name="*inventoryCheck" class="{1}inventoryAct" method="detailCheck">
			<result>/WEB-INF/store/inventory.jsp</result>						
		</action>
		<action name="*inventorySubmit" class="{1}inventoryAct">
			<result>/WEB-INF/store/inventory.jsp</result>
			<result name="detail" type="redirect">/stock/{1}inventoryDetail!input.html</result>
			<result name="detailBack">/WEB-INF/store/inventory.jsp</result>	
			<result name="unitList" type="redirect">/sys/unitList!list.html?result={1}inventory</result>				
		</action>		
		
		<action name="*inventoryDetail" class="{1}inventoryDetailAct">
			<result>/WEB-INF/store/inventoryDetail.jsp</result>
			<result name="exit" type="redirect">/stock/{1}inventorySubmit!detailBack.html</result>					
		</action>
		
		<action name="*inventoryBookDetail" class="{1}inventoryBookAct" method="detail">
			<result>/WEB-INF/store/inventoryBook.jsp</result>
		</action>
		<action name="*inventoryBookDetailCheck" class="{1}inventoryBookAct" method="detailCheck">
			<result>/WEB-INF/store/inventoryBook.jsp</result>
		</action>
		<action name="*inventoryBookQueryBack" class="{1}inventoryBookAct" method="queryBack">
			<result>/WEB-INF/store/inventoryBook.jsp</result>
		</action>
		<action name="*inventoryBook" class="{1}inventoryBookAct">
			<result>/WEB-INF/store/inventoryBook.jsp</result>			
			<result name="purchase">/WEB-INF/deal/purchase.jsp</result >
			<result name="purchaseBack">/WEB-INF/deal/purchaseBack.jsp</result >
			<result name="sale">/WEB-INF/deal/sale.jsp</result >
			<result name="saleBack">/WEB-INF/deal/saleBack.jsp</result >
			<result name="transferIn">/WEB-INF/deal/transferIn.jsp</result >
			<result name="transferOut">/WEB-INF/deal/transferOut.jsp</result >
			<result name="loss">/WEB-INF/deal/loss.jsp</result >
			<result name="overflow">/WEB-INF/deal/overflow.jsp</result >
			<result name="ppurchase">/WEB-INF/deal/ppurchase.jsp</result >
			<result name="ppurchaseBack">/WEB-INF/deal/ppurchaseBack.jsp</result >
			<result name="psale">/WEB-INF/deal/psale.jsp</result >
			<result name="psaleBack">/WEB-INF/deal/psaleBack.jsp</result >
			<result name="ptransferIn">/WEB-INF/deal/ptransferIn.jsp</result >
			<result name="ptransferOut">/WEB-INF/deal/ptransferOut.jsp</result >
			<result name="ploss">/WEB-INF/deal/ploss.jsp</result >
			<result name="poverflow">/WEB-INF/deal/poverflow.jsp</result >		
			<result name="inventoryBookQuery">/WEB-INF/store/inventoryBookQuery.jsp</result >			
		</action>
		<action name="*inventoryBookQuery" class="{1}inventoryBookAct" method="query">
			<result>/WEB-INF/store/inventoryBookQuery.jsp</result >			
			<result name="OK" type="redirect">/stock/{1}inventoryBookQueryBack.html</result >
			<result name="exit" type="redirect">/stock/{1}inventoryBookDetail.html</result >	
			<result name="exitCheck" type="redirect">/stock/{1}inventoryBookDetailCheck.html</result >			
		</action>		
		
		<action name="*inventoryIntialInput" class="{1}inventoryIntialAct" method="input">
			<result>/WEB-INF/store/inventoryIntial.jsp</result>						
		</action>
		<action name="*inventoryIntialInfoBack" class="{1}inventoryIntialAct" method="infoBack">
			<result>/WEB-INF/store/inventoryIntial.jsp</result>						
		</action>
		<action name="*inventoryIntial" class="{1}inventoryIntialAct">
			<result>/WEB-INF/store/inventoryIntial.jsp</result>
			<result name="productDetail" type="redirect">/info/inventoryIntialProductList.html</result >	
			<result name="partDetail" type="redirect">/info/inventoryIntialPartList.html</result >	
			<result name="warehouseDetail" type="redirect">/info/warehouseList!list.html?result={1}inventoryIntial</result >
			<result name="OK" type="redirect">/stock/{1}inventoryIntialInput.html</result>								
		</action>
				
	</package>
</struts>
